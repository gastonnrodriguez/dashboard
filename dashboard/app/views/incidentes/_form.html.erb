<%= form_for @incidente, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :asunto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asunto, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :responsable, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :responsable, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                incidentes_path, :class => 'btn' %>
  </div>
<% end %>
